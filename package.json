{
  "name": "@coinbase/onchainkit",
  "version": "0.5.2",
  "repository": "https://github.com/coinbase/onchainkit.git",
  "license": "MIT",
  "scripts": {
    "build": "packemon build --addEngines --addFiles --declaration && npx packemon validate --no-license --no-people --no-repo",
    "check": "yarn format",
    "format": "prettier --log-level warn --write .",
    "format:check": "prettier --check .",
    "test": "jest --testPathIgnorePatterns=\\.integ\\.",
    "test:integration": "jest --testPathIgnorePatterns=\\.test\\.",
    "test:all": "jest .",
    "test:coverage": "jest . --coverage ",
    "release:check": "changeset status --verbose --since=origin/main",
    "release:publish": "yarn install && yarn build && changeset publish",
    "release:version": "changeset version && yarn install --immutable"
  },
  "peerDependencies": {
    "react": "^18",
    "react-dom": "^18",
    "viem": "^2.7.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^14.2.0",
    "@types/jest": "^29.5.11",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-extended": "^4.0.2",
    "packemon": "^3.3.0",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "react": "^18",
    "react-dom": "^18",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "~5.3.3",
    "viem": "^2.7.0",
    "yarn": "^1.22.21"
  },
  "packemon": [
    {
      "format": [
        "esm",
        "lib"
      ],
      "platform": [
        "browser",
        "native",
        "node"
      ]
    }
  ],
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "esm/**/*",
    "lib/**/*",
    "src/",
    "src/**/*"
  ],
  "type": "commonjs",
  "packageManager": "yarn@4.0.2",
  "engines": {
    "node": ">=16.12.0"
  },
  "main": "./lib/node/index.js",
  "module": "./esm/index.js",
  "types": "./lib/index.d.ts",
  "browser": "./lib/browser/index.js"
}
